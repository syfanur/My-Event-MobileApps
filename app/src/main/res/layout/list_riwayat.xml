<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white_smoke">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:onClick="event"
            android:scaleType="fitXY"
            android:src="@drawable/playlistlove" />

        <RelativeLayout
            android:id="@+id/movieDetails"
            android:layout_width="299dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/poster">

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist Love Festival"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul"
                android:layout_margin="10px"
                android:layout_marginStart="10px"
                android:layout_marginTop="10px"
                android:layout_marginEnd="10px"
                android:text="Music"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kategori"
                android:layout_marginStart="10px"
                android:layout_marginTop="10px"
                android:layout_marginEnd="10px"
                android:layout_marginBottom="10px"
                android:text="TNI AU Husein Sastranegara"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alamat"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="229dp"
                android:text="Pending"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bt_detail"
                android:layout_width="73dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textView17"
                android:layout_alignBottom="@+id/textView17"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="222dp"
                android:layout_marginBottom="-38dp"
                android:background="#FFAB40"
                android:onClick="detail"
                android:text="Detail " />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>